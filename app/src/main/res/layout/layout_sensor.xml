    <!--CO-->
    <LinearLayout
        android:id="@+id/settings_device_ll_co"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/sensor_co"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#c8c7cc"
            android:contentDescription="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="@string/setting_text_upper_limit"
                android:textColor="#666666"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_co_upper_limit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_arrow" />

            <TextView
                android:id="@+id/settings_device_tv_co_upper_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/iv_co_upper_limit"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc"
            android:contentDescription="@null" />
    </LinearLayout>

