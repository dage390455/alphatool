<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#c8c7cc"
        android:contentDescription="@null" />

    <RelativeLayout
        android:id="@+id/include_rl_fluctuationRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="波动范围"
            android:textColor="#666666"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/include_iv_fluctuationRange"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_arrow" />

        <TextView
            android:id="@+id/include_tv_fluctuationRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/include_iv_fluctuationRange"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>