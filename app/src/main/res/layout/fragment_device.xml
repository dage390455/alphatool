<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/device_ptr_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:dividerHeight="15dp"
        android:fadingEdge="none"
        android:scrollbars="vertical"
        android:layout_marginTop="-10dp"
        android:scrollbarStyle="outsideOverlay"
        android:layout_marginBottom="@dimen/y30"
        />

    <LinearLayout
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/device_list_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.sensoro.loratool.widget.SensoroPopupView
        android:id="@+id/device_model_popup"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        />
    <ImageView
        android:id="@+id/device_iv_add"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y250"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/ic_menu_btn"
        />
</RelativeLayout>
