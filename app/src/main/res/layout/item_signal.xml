<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/y100"
    android:orientation="vertical">

    <TextView
        android:id="@+id/signal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/signal_text_time"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y10" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signal_up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text_time"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="16sp"
            android:text="↑" />

        <TextView
            android:id="@+id/signal_up_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/signal_up_arrow"
            android:textSize="14sp"
            android:text="RSSI" />

        <TextView
            android:id="@+id/signal_up_snr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/signal_up_rssi"
            android:textSize="14sp"
            android:text="SNR" />
        <TextView
            android:id="@+id/signal_up_txp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@id/signal_up_snr"
            android:textSize="14sp"
            android:text="Tx.Power" />
        <TextView
            android:id="@+id/signal_up_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/signal_up_txp"
            android:textSize="14sp"
            android:text="Interval" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signal_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@color/signal_text"
            android:textSize="16sp"
            android:text="↓" />

        <TextView
            android:id="@+id/signal_down_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/signal_down_arrow"
            android:textSize="14sp"
            android:text="RSSI" />

        <TextView
            android:id="@+id/signal_down_snr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/signal_down_rssi"
            android:textSize="14sp"
            android:text="SNR" />
        <TextView
            android:id="@+id/signal_down_txp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@id/signal_down_snr"
            android:textSize="14sp"
            android:text="Tx.Power" />
        <TextView
            android:id="@+id/signal_down_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/signal_text"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/signal_down_txp"
            android:textSize="14sp"
            android:text="Interval" />
    </RelativeLayout>
</LinearLayout>
