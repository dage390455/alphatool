<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_root"
    android:orientation="vertical"
    android:background="@color/advance_layout_color"
    >

    <!--标题：返回按钮和标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar_bg">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_avatar"
            />

        <TextView
            android:id="@+id/settings_filter_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="@string/finish"
            android:textColor="#fdffff"
            android:textSize="20sp" />

    </RelativeLayout>
    <ExpandableListView
        android:id="@+id/settings_filter_menu"
        android:dividerHeight="1dp"
        android:childDivider="@drawable/shape_line"
        android:divider="@drawable/shape_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
